<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pt.nmplcpimenta.innowave_githuber">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="pt.nmplcpimenta.innowavegithuber.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="pt.nmplcpimenta.innowavegithuber.GitHubUserListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name="pt.nmplcpimenta.innowavegithuber.GitHubUserDetailActivity"
            android:label="@string/title_githubuser_detail"
            android:parentActivityName="pt.nmplcpimenta.innowavegithuber.GitHubUserListActivity"
            android:theme="@style/AppTheme.NoActionBar">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="pt.nmplcpimenta.innowavegithuber.GitHubUserListActivity" />
        </activity>
    </application>
</manifest>